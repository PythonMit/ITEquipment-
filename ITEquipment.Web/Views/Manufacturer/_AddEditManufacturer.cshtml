@model ITEquipment.Models.ManufacturerModel

<div id="Ajax_TargetId">
    <form id="frmAddEditManufacturer" class="form-horizontal" data-ajax="true" data-ajax-method="POST" data-ajax-failure="AddEditManufacturerFailure"
          data-ajax-success="AddEditManufacturerSuccess" asp-controller="Manufacturer" asp-action="AddEditManufacturer" data-ajax-begin="ShowLoader()" data-ajax-complete="HideLoader()">
        <div class="row">
            <input type="hidden" asp-for="Id" class="hdnManufacturerId" />
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="ManufacturerName" class="form-control" placeholder="Manufacturer Name" />
                    <label asp-for="ManufacturerName" class="control-label text-muted requiredFiled"></label>
                    <span asp-validation-for="ManufacturerName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="submit" value="Save" class="btn btn-primary ">save</button>
                <button type="button" class="btn btn-secondary me-3 reset-form">Reset</button>
                <button class="btn btn-secondary" id="btnClose" type="button" data-bs-dismiss="modal" style="display:none;">Close</button>
            </div>
        </div>
    </form>
</div>
    @await Html.PartialAsync("_ValidationScriptsPartial") 
