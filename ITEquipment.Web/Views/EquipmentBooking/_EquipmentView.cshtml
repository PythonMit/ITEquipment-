@model ITEquipment.Models.EquipmentDTOModel

<div id="Ajax_TargetId">
   
        <div class="row">
            <input type="hidden" asp-for="Id" class="hdnEquipmentId" />
        <div class="col-lg-3 mb-3">
          
            <div>
                <img src="@ViewBag.ImageFilePath" alt="Alternate Text" height="200px" width="200px" />
            </div>
        </div>
        <div class="col-lg-9 mb-3">
            <div class="row">
                <div class="col-lg-4 mb-3">
                    <label asp-for="Name" class="control-label">Equipment Name :</label>
                    <div>
                        <label asp-for="Name" class="control-label text-muted requiredFiled">@(Model?.Name == null ? "Equipment Name" : Model?.Name)</label>
                    </div>
                </div>
               
                <div class="col-lg-4 mb-3">
                    <label asp-for="ModelNo" class="control-label">Model No :</label>
                    <div>
                        <label asp-for="ModelNo" class="control-label text-muted requiredFiled">@(Model?.ModelNo == null ? "Model No" : Model?.ModelNo)</label>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <label asp-for="SerialNo" class="control-label">SerialNo :</label>
                    <div>
                        <label asp-for="SerialNo" class="control-label text-muted requiredFiled">@(Model?.SerialNo == null ? "Serial No" : Model?.SerialNo)</label>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <label asp-for="LocationName" class="control-label">Location :</label>
                    <div>
                        <label asp-for="LocationName" class="control-label text-muted requiredFiled">@(Model?.LocationName == null ? "Location" : Model?.LocationName)</label>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <label asp-for="AssetsTag" class="control-label"> Assets Tag:</label>
                    <div>
                        <label asp-for="AssetsTag" class="control-label text-muted requiredFiled">@(Model?.AssetsTag == null ? "Assets Tag" : Model?.AssetsTag)</label>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <label asp-for="ManufacturerName" class="control-label">Manufacturer :</label>
                    <div>
                        <label asp-for="ManufacturerName" class="control-label text-muted requiredFiled">@(Model?.ManufacturerName == null ? "Manufacturer" : Model?.ManufacturerName)</label>
                    </div>
                </div>
              
                <div class="col-lg-4 mb-3">
                    <label asp-for="StatusType" class="control-label">Status:</label>
                    <div>
                        <label asp-for="StatusType" class="control-label text-muted requiredFiled">@(Model?.StatusType == null ? "Status" : Model?.StatusType)</label>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <label class="control-label">Document :</label>
                    <div>
                        <a href="@ViewBag.DocumentPath" target="_blank"><i class="bi bi-file-earmark-bar-graph-fill fs-3"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <label class="control-label"> Video :</label>
                    <div>
                        <a href="@ViewBag.VideoPath" target="_blank"><i class="bi bi-film fs-3"></i></a>
                    </div>
                </div>
                <div class="col-lg-12 mb-3">
                    <label asp-for="Description" class="control-label">Description :</label>
                    <div>
                        <label asp-for="Description" class="control-label text-muted requiredFiled">@(Model?.Description == null ? "Description" : Model?.Description)</label>
                    </div>
                </div>
                <div class="accessory-list-wrap col-lg-12 mb-3">
                    @if (Model != null && Model.AssetsList.Count() > 0)
                    { 
                        <label>Accessories : </label>
                        @foreach (var item in Model.AssetsList)
                        {
                            <div class="accessory-item-view" data-id="@item.Id">
                                <span>@item.AccessoryName</span>
                               
                            </div>

                        }
                    }
                    
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
        </div>
</div>

@section Scripts {
    @* @await Html.PartialAsync("_ValidationScriptsPartial") *@
}