@model ITEquipment.Models.UserMasterDTOModel

<div id="Ajax_TargetId">
     <form id="frmAddUser" class="form-horizontal" data-ajax="true" data-ajax-method="POST" data-ajax-failure="AddUserFailure"
          data-ajax-success="AddUserSuccess" asp-controller="Home" asp-action="AddUser" data-ajax-begin="ShowLoader()" data-ajax-complete="HideLoader()">
        <div class="row">
            <input type="hidden" asp-for="Id" class="hdnUserId" />
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                     <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <label asp-for="FirstName" class="control-label text-muted requiredFiled"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <label asp-for="LastName" class="control-label text-muted requiredFiled"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="Email" type="email"/>
                    <label asp-for="Email" class="control-label text-muted requiredFiled" ></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="PhoneNo" class="form-control" placeholder="Phone No" type="number" maxlength="13"  />
                    <label asp-for="PhoneNo" class="control-label text-muted requiredFiled"></label>
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <select asp-for="RoleId" class="form-control">
                        @foreach (var item in ViewBag.Roles)
                        {

                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <label asp-for="RoleId"></label>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" value="Save" class="btn btn-primary " >save</button>
                <button type="button" class="btn btn-secondary me-3 reset-form">Reset</button>
            </div>
        </div>
    </form> 
</div>
@section Scripts {
    @* @await Html.PartialAsync("_ValidationScriptsPartial") *@
}